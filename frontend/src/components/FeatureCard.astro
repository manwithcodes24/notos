---
const { title, desc } = Astro.props;
---

<div
  class="container-featureCard max-w-[350px] relative p-6 flex flex-col items-center mt-10 gap-y-6"
>
  <div
    class="absolute bg-purple-900 border-2 border-purple-500 shadow-[0_0_15px_#7a1bff] rounded-2xl inset-0 bg-cover bg-center opacity-45 backdrop-blur-3xl -z-1 drop-shadow-[0_0_5px_#B784FFFF] drop-shadow-purple-900"
  >
  </div>
  <img
    src="/public/assets/images/feature1.svg"
    alt="Feature 1"
    class="opacity-75 min-w-[200px] w-24 h-24 drop-shadow-[0_0_5px_#B784FFFF]"
  />
  <div class="flex flex-col gap-y-1
"> 
    <h3 class="text-3xl flex-1 text-center">{title}</h3>
    <p class="text-gray-200 opacity-70 text-xl text-center">{desc}</p>
  </div>
</div>
